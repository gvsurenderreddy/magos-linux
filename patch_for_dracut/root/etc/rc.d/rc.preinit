#!/bin/bash
#
# magosctl      Helper script for MagOS Linux Live.
#
# Authors:	Mikhail Zaripov <m3for@mail.ru>
#

# We have to launch some rc scripts
for a in usr/lib/magos/rc.preinit/* ;do
   [ -x $a ] && $a 2>/dev/null
done
for a in usr/lib/magos/rc.preinit.d/* ;do
   [ -x $a ] && $a 2>/dev/null &
done

wait
