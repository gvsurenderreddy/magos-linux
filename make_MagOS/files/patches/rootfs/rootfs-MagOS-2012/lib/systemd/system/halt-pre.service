[Unit]
Description=/sbin/halt.pre Compatibility
ConditionFileIsExecutable=/sbin/halt.pre
DefaultDependencies=no
Before=shutdown.target

[Service]
Type=oneshot
ExecStart=/sbin/halt.pre
TimeoutSec=0
StandardOutput=tty
RemainAfterExit=yes

[Install]
WantedBy=halt.target poweroff.target
